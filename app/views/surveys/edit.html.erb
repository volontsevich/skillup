<%= form_for @survey do |f| %>
    <p>
      <%= f.label :name, 'Survey name' %><br/>
      <%= f.text_field :name %>
    </p>
    <div class="row">

      <div class="col-md-6">
        <ol>
          <%= f.fields_for :questions do |q| %>
              <%= render 'questions/question_edit', q: q %>
          <% end %>
          <%= link_to 'Add Question', '#', class: 'add_question' %>
        </ol>
      </div>

      <div id="d" class="col-md-6">
        <%= render 'surveys/emails_dates_edit', f: f %>
      </div>
    </div>
    <p>
      <%= f.submit 'Submit', class: 'survey_submit btn btn-primary action_button' %>
    </p>
<% end %>

<%= link_to 'Back', :back, class: 'btn btn-danger action_button' %>
<div id="pancakes"></div>
