<% expired = Date.current > survey.exp_date %>
<% row_class = '' %>
<% row_class = 'gray' if expired %>
<div class="row <%= row_class%>">
  <div class="col-md-1 text-center clickable-area" data-href=<%= survey_path(survey) %>>
    <h4><%= survey.id %></h4>
  </div>

  <div class="col-md-2 text-left clickable-area" data-href=<%= survey_path(survey) %>>
    <h4><%= survey.name %></h4>
  </div>

  <div class="col-md-2 text-center clickable-area" data-href=<%= survey_path(survey) %>>
    <h4><%= survey.exp_date %></h4>
  </div>

  <% if current_user.admin? %>
      <div class="col-md-2 text-center clickable-area" data-href=<%= survey_path(survey) %>>
        <h4>
          <%= find_user(survey.user_id).email %>
        </h4>
      </div>
  <% end %>

  <div class="col-md-1 text-center">
    <h4><%= link_to 'Answer', new_respond_path(survey: survey), class: 'btn btn-primary action_button' %></h4>
  </div>
  <div class="col-md-1 text-center">
    <h4><%= link_to 'Edit', edit_survey_path(survey), class: 'btn btn-primary action_button' %></h4>
  </div>
  <div class="col-md-1 text-left">
    <h4><%= link_to 'Destroy', survey, confirm: 'Are you sure?', method: :delete, class: 'btn btn-primary action_button' %></h4>
  </div>

</div>

<hr class="hr_black">