<div class="row">

  <div class="col-md-1 text-center">
    <h4><%= user.id %></h4>
  </div>

  <div class="col-md-3 text-left">
    <h4><%= user.email %></h4>
  </div>

  <div class="col-md-1 text-center">
    <%= form_for(user, url: admin_user_path(user), html: {method: :put, autocomplete: 'off'}) do |f| %>
        <div class="field">
          <%= f.check_box :admin, class: 'btn btn-danger' %>
        </div>
        <div class="actions">
          <%= f.submit 'Update' %>
        </div>
    <% end %>
  </div>

  <div class="col-md-1 text-left">
    <h4><%= link_to 'Surveys', admin_user_path(user), class: 'btn btn-primary action_button' %></h4>
  </div>

  <div class='col-md-1 text-left'>
    <h4><%= link_to 'Destroy', admin_user_path(user), confirm: 'Are you sure?', method: :delete, class: 'btn btn-primary action_button' %></h4>
  </div>

  <div class="col-md-5 text-left">
    <h4><%= link_to 'Edit password', edit_admin_user_path(user), class: 'btn btn-primary wide_action_button' %></h4>
  </div>

</div>