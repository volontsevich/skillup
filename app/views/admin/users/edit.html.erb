<h2>Edit <%= @user.email %></h2>

<%= form_for(@user, url: admin_user_path(@user), html: { method: :put, autocomplete: "off" }) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, value: @user.email %>
    </div>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", value: ""%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", value: "" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
<% end %>


<%= link_to "Back", :back %>
